		function batch() {
            var lecture = document.getElementsByName('type')[0].value
            if(lecture = "Lecture") {
                for(i=0;i<8;i++){
					document.getElementsByName('Batch')[i].removeAttribute('required')
					document.getElementsByName('Duration')[1].removeAttribute('checked')
					document.getElementsByName('Duration')[0].setAttribute('checked', '')
                }   
            }
       }
	
